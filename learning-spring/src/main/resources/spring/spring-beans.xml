<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="helloWorld" scope="prototype" class="com.wangfengbabe.learning_spring.HelloWorld" p:address="shanghai">
    <property name="message" value="wangfeng"/>
  </bean>

  <bean id="customerService" class="com.wangfengbabe.learning_spring.CustomerService">
    <property name="name" value="wangfeng"/>
    <property name="url" value="www.wangfengbabe.com"/>
  </bean>

  <bean id="hiJackBeforeMethod" class="com.wangfengbabe.learning_spring.HijackBeforeMethod">
  </bean>
  <bean id="hiJackAfterMethod" class="com.wangfengbabe.learning_spring.HijackAfterMethod">
  </bean>
  <bean id="hiJackThrowsMethod" class="com.wangfengbabe.learning_spring.HijackAfterThrowingExceptionMethod">
  </bean>
  <bean id="hiJackAroundMethod" class="com.wangfengbabe.learning_spring.HijackAroundMethod">
  </bean>

  <bean id="customerServiceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="target" ref="customerService"/>
    <property name="interceptorNames">
      <list>
        <value>hiJackAroundMethod</value>
      </list>
    </property>
  </bean>

  <bean id="customerBo" class="com.wangfengbabe.learning_spring.CustomerBoImpl"/>
  <bean id="logAspect" class="com.wangfengbabe.learning_spring.LoginAspect"/>


</beans>